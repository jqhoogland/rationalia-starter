{
  "include": [
    "src/**/*.ts"
 ],
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,    
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    // so that if your project isn't using TypeScript, it still has autocomplete
    "allowJs": true,

    // "bun-types" is the important part
    "types": ["bun-types"]
  }
}
